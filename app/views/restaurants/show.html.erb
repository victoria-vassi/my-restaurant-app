<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  My favourite Restaurants
</div>


<div class="home">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone Number</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <tr>
          <td><%= @restaurant.name %></td>
          <td><%= @restaurant.address %></td>
          <td><%= @restaurant.phone_number %></td>
          <td><%= @restaurant.category %></td>
        </tr>
    </tbody>
  </table>
</div>


<h1>Reviews</h1>

<% @reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
<% end %>

<%= link_to 'Add Review', new_restaurant_review_path(@restaurant) %> |
<%= link_to 'Back', restaurants_path %>
